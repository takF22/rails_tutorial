<div class="container">
<div class="row">
<div class="col-4"></div>
<div class="col-4">
  <div class="card">
    <div class="card-header"><h2>パスワード再設定</h2></div>
    <div class="card-body">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "パスワード変更メールを送信する",:class=> "btn btn-primary"%>
  </div>
<% end %>
<br>
<%= render "users/shared/links" %>
</div>
</div>
<div class="col-4"></div>
</div>
</div>
</div> 