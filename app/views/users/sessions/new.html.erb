<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="card">
        <div class="card-header"><h2>ログイン</h2></div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
          <%= f.label :login, "メールアドレスorユーザーID" %><br />
          <%= f.text_field :login, autocomplete: "login" %>
          </div>

          <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログインしたままにする %>
          </div>
          <% end %>

          <div class="actions text-center">
          <%= f.submit "ログイン",:class=>"btn btn-primary" %>
          </div>
          <% end %>

          <div class ="text-center"><%= render "users/shared/links" %></div>
        </div>
      </div>
      <div class="col-4"></div>
    </div>
  </div>
</div> 